@model appointment.Models.Appointlist;

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Appoinrment" asp-action="Index" method="get">
    <p>

        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.appointments[0].name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.appointments[0].email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.appointments[0].date)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.appointments)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
